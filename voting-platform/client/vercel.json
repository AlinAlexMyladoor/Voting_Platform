{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://e-ballotserver.vercel.app/api/:path*"
    },
    {
      "source": "/auth/:path*",
      "destination": "https://e-ballotserver.vercel.app/auth/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
